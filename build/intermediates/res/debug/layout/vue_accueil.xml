<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/degrade"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#042988"
                android:textSize="45sp"
                android:layout_marginBottom="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/joueur"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:text="@string/joueur"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#042988" />

                <Spinner
                    android:id="@+id/selectpoints"
                    android:background="@drawable/spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".70"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/adversaires"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:text="@string/coeff"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#042988" />

                <Spinner
                    android:id="@+id/coefficient"
                    android:background="@drawable/spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".7"
                    android:gravity="center"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item" />
            </LinearLayout>
            


			            <EditText
			                android:id="@+id/nombre1"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:layout_marginTop="40dp"
			                android:background="@drawable/border"
			                android:hint="@string/nombre1"
			                android:ems="10"
			                android:textSize="20sp"
			                android:inputType="numberDecimal|numberSigned"
			                android:maxLength="4" />
		
			    
              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:weightSum="1" >
				            
	             <ImageButton
	                    android:id="@+id/btn_rechercher"
	                    android:layout_width="0dp"
	                    android:layout_height="40dp"
	                    android:adjustViewBounds="true"
	                    android:layout_weight=".20"
	                    android:background="@drawable/border"
	                    android:contentDescription="@string/description"
	                    android:src="@drawable/rechercher" />
	
	            <EditText
	                android:id="@+id/nombre2"
					android:layout_width="0dp"
                    android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_weight=".80"
	                android:hint="@string/nombre2"
	                android:textSize="20sp"
	                android:background="@drawable/border"
	                android:ems="10"
	                android:inputType="numberDecimal|numberSigned"
	                android:maxLength="4" />
            
            </LinearLayout>

            <Switch
                android:id="@+id/victoire_defaite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="DÃ©faite"
                android:textOn="Victoire" 
                android:layout_marginTop="30dp"
               />

            <Button
                android:id="@+id/calcul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="30sp"
                android:textColor="#042988"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/calcul"
                android:text="@string/calcul" />
            
        
            <com.google.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
                android:id="@+id/adView"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                ads:loadAdOnCreate="true"
                ads:testDevices="TEST_EMULATOR, @string/deviceID" />

        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/guillaumehautcoeur/Desktop/eclipse/Projet_TNSI/res/layout/vue_accueil.xml -->